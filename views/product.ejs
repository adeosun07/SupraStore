    <link rel="stylesheet" href="/style.css">
    <style>
        header {
            height: 13vh;
            background-color: #0000000c;
        }
        main {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 20px;
        }

        .product-img {
            text-align: center;
        }

        .mainImg img {
            width: 350px;
            height: auto;
            border-radius: 8px;
            border: 2px solid #ccc;
        }

        .subImages {
            display: flex;
            justify-content: center;
            gap: 15px;
            margin-top: 15px;
        }

        .subImages img {
            width: 80px;
            height: auto;
            border-radius: 5px;
            border: 2px solid #ccc;
            cursor: pointer;
            transition: transform 0.2s ease, border-color 0.2s ease;
        }

        .subImages img:hover {
            transform: scale(1.05);
            border-color: #000;
        }

        .subImages img.active {
            border: 3px solid #323233; /* Highlight border */
            box-shadow: 0 0 5px rgba(99, 99, 100, 0.6);
        }

        .product-details {
            text-align: center;
            margin-top: 20px;
            line-height: 1.5;
        }
        .reviews {
            line-height: 1.2;
        }
        .reviews h3 {
            margin: 10px 0;
        }

        button {
            margin-top: 10px;
            padding: 10px 20px;
            background-color: #222;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        button:hover {
            background-color: #555;
        }

        .reviews {
            max-width: 600px;
            margin-top: 30px;
        }
    </style>
</head>
